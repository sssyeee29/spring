<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.sample.mapper.UserMapper">

	<insert id="insertUser" parameterType="org.sample.domain.UserVO">
	    <selectKey keyProperty="userid" resultType="long" order="BEFORE">
	        SELECT pd_user_seq.NEXTVAL FROM dual
	    </selectKey>
    INSERT INTO pd_user (userid, nickname, pwd, email)
    VALUES (#{userid}, #{nickname}, #{pwd}, #{email})
	</insert>

    <select id="readUser" parameterType="Long" resultType="org.sample.domain.UserVO">
        SELECT * FROM pd_user WHERE userid = #{userid}
    </select>

    <delete id="deleteUser" parameterType="Long">
        DELETE FROM pd_user WHERE userid = #{userid}
    </delete>

    <update id="updateUser" parameterType="org.sample.domain.UserVO">
        UPDATE pd_user
        SET nickname = #{nickname}, pwd = #{pwd}, email = #{email}
        WHERE userid = #{userid}
    </update>
    
    <select id="getUserById" parameterType="Long" resultType="org.sample.domain.UserVO">
    	SELECT * FROM pd_user WHERE userid = #{userid}
	</select>
</mapper>