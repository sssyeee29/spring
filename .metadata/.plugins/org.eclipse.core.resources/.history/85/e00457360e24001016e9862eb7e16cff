package org.zerock.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.zerock.dto.BoardVO;
import org.zerock.service.BoardService;

import lombok.RequiredArgsConstructor;
import lombok.extern.log4j.Log4j;
import oracle.jdbc.proxy.annotation.Post;

/*
/board/boardList -> 전체데이터반환
/board/view -> 상세페이지  
 */


@Controller 
//@RestController
@RequestMapping("/board")
@RequiredArgsConstructor
@Log4j
public class BoardController {

	private final BoardService boardService;
	
	@GetMapping("/list")
	public List<BoardVO> list() {
		return boardService.selectListBoards(); 
	}
	
	@GetMapping("/boardList")
	public String boardList(Model model) {
		
		List<BoardVO> list = boardService.selectListBoards(); //데이터 가져오기
		
		model.addAttribute("boardList", list);
		
		return "boardList"; //jsp화면으로 전달 (view)
	}
	
	@GetMapping("/register")
	public String register() {
		return "register"; //jsp화면 호출 
	}
	
	//유효성체크 register.jsp에서 action하면 이 부분으로 오는것 
	@PostMapping("/register")
	public String insertBoard(BoardVO vo) {
		//입력값을 가져와서 db에 저장하는거 
		boardService.insertBoard(vo);		
		return "redirect:/board/boardList";
	}
}
